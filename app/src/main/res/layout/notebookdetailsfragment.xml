<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v7.widget.RecyclerView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/recyclerListNotebook"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floattingactionbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        app:layout_behavior="com.example.conga.bmi.utils.ScrollAwareFABBehavior"
        android:layout_margin="16dp"
        android:src="@drawable/ic_note_add_black_24dp"
        app:layout_anchor="@id/recyclerListNotebook"
        app:layout_anchorGravity="bottom|right|end" />

</android.support.design.widget.CoordinatorLayout>